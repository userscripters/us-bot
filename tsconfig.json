{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "removeComments": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2020",
        "outDir": "dist",
        "types": ["node"],
        "lib": ["ESNext"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "test"]
}
