{
    "name": "us-bot",
    "version": "0.1.0",
    "description": "UserScripters chatroom bot",
    "main": "index.js",
    "scripts": {
        "typecheck": "tsc --noEmit",
        "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json node --loader ts-node/esm node_modules/mocha/lib/cli/cli test/**/*.spec.ts",
        "build": "npm run typecheck && npm run test && tsc",
        "start:dev": "node --loader ts-node/esm src/index.ts",
        "start": "node dist/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/userscripters/us-bot.git"
    },
    "keywords": [
        "userscripters",
        "bot",
        "chat",
        "stackoverflow"
    ],
    "author": "Oleg Valter",
    "license": "GPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/userscripters/us-bot/issues"
    },
    "homepage": "https://github.com/userscripters/us-bot#readme",
    "dependencies": {
        "chatexchange": "^0.4.3",
        "commander": "^8.2.0",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "html-entities": "^2.3.2",
        "octokit": "^1.5.0",
        "p-queue": "^7.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.21",
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.9.0",
        "chai": "^4.3.4",
        "mocha": "^9.1.1",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2"
    },
    "type": "module"
}
